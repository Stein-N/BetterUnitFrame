<Ui>
    <Frame name="FramePreviewTemplate" virtual="true" inherits="InsetFrameTemplate4" enableMouse="true">
        <Size y="200"/>

        <Scripts>
            <OnMouseDown method="OnMouseDown"/>
        </Scripts>

        <Layers>
            <Layer level="OVERLAY">
                <FontString text="Preview (Right Click to add/delete Components)" inherits="GameFontNormalOutline">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="10" y="-10"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>

    <Frame name="PlayerFramePreviewTemplate" inherits="FramePreviewTemplate" mixin="PlayerMenu" virtual="true"/>
</Ui>