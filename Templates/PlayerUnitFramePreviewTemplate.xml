<Ui>
    <Frame name="PlayerUnitFramePreviewTemplate" virtual="true" inherits="InsetFrameTemplate4" mixin="PlayerUnitFramePreviewMixin" enableMouse="true">
        <Size y="200"/>

        <Anchors>
            <Anchor point="CENTER" relativeKey="$parent" x="0" y ="0"/>
        </Anchors>

        <Scripts>
            <OnShow method="OnShow"/>
            <OnHide method="OnHide"/>
            <OnMouseWheel method="OnMouseWheel"/>
        </Scripts>

        <Layers>
            <Layer level="OVERLAY">
                <FontString text="Preview" inherits="GameFontNormalOutline">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent" x="10" y="-10"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Frames>
            <Frame parentKey="PlayerUnitFramePreview" inherits="PreviewModuleTemplate" scale="1.5">
                <Size x="232" y="100"/>
                <Frames>
                    <!-- Background for UniFrame Texture -->
                    <Frame parentKey="FrameBackground" inherits="PreviewModuleTemplate">
                        <Size x="198" y="71"/>
                        <Layers>
                            <Layer level="BACKGROUND">
                                <Texture parentKey="Texture" atlas="ui-hud-unitframe-player-portraiton"/>
                            </Layer>
                        </Layers>
                    </Frame>

                    <!-- Player Portrait -->
                     <Frame parentKey="PlayerPortrait" inherits="PreviewModuleTemplate" frameLevel="LOW">
                        <Size x="60" y="60"/>
                        <Layers>
                            <Layer level="ARTWORK">
                                <Texture parentKey="Texture" atlas="UI-HUD-UnitFrame-Player-Portrait-ClassIcon-DeathKnight"/>
                            </Layer>
                        </Layers>
                        <Anchors>
                            <Anchor point="TOPLEFT" x="24" y="-19"/>
                        </Anchors>
                     </Frame>

                    <!-- Health Bar -->
                    <Frame parentKey="HealthBar" inherits="PreviewModuleTemplate">
                        <Size x="124" y="20"/>
                        <Layers>
                            <Layer level="BACKGHROUND">
                                <Texture parentKey="Texture" atlas="ui-hud-unitframe-player-portraiton-bar-health"/>
                            </Layer>
                        </Layers>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent" x="85" y="-40"/>
                        </Anchors>

                        <Frames>
                            <!-- Health Text -->
                            <Frame parentKey="UnitHealth" inherits="PreviewModuleTemplate">
                                <Size x="0" y="0"/>
                                <Layers>
                                    <Layer level="OVERLAY">
                                        <FontString parentKey="Text" text="128K / 128K" inherits="TextStatusBarText">
                                            <Anchors>
                                                <Anchor point="CENTER" relativeKey="$parent"/>
                                            </Anchors>
                                        </FontString>
                                    </Layer>
                                </Layers>
                                <Anchors>
                                    <Anchor point="TOPLEFT" relativeKey="$parent" x="0" y="0"/>
                                </Anchors>
                            </Frame>
                        </Frames>
                    </Frame>


                    <!-- Mana Bar-->
                    <Frame parentKey="ManaBar" inherits="PreviewModuleTemplate">
                        <Size x="124" y="10"/>
                        <Layers>
                            <Layer level="BACKGHROUND">
                                <Texture parentKey="Texture" atlas="ui-hud-unitframe-player-portraiton-bar-runicpower"/>
                            </Layer>
                        </Layers>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent" x="85" y="-61"/>
                        </Anchors>
                        <Frames>
                            <!-- Mana Text -->
                            <Frame parentKey="UnitPower" inherits="PreviewModuleTemplate">
                                <Size x="0" y="0"/>
                                <Layers>
                                    <Layer level="OVERLAY">
                                        <FontString parentKey="Text" text="100 / 100" inherits="TextStatusBarText" scale="1">
                                            <Anchors>
                                                <Anchor point="CENTER" relativeKey="$parent"/>
                                            </Anchors>
                                        </FontString>
                                    </Layer>
                                </Layers>
                                <Anchors>
                                    <Anchor point="TOPLEFT" relativeKey="$parent" x="0" y="0"/>
                                </Anchors>
                            </Frame>
                        </Frames>
                    </Frame>

                    <!-- PlayerName -->
                    <Frame parentKey="PlayerName" inherits="PreviewModuleTemplate">
                        <Size x="0" y="0"/>
                        <Layers>
                            <Layer level="OVERLAY">
                                <FontString parentKey="Text" text="Name" inherits="GameFontNormal">
                                    <Anchors>
                                        <Anchor point="TOPLEFT" relativeKey="$parent" x="88" y="-27"/>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent" x="0" y="0"/>
                        </Anchors>
                    </Frame>

                    <!-- PlayerLevel -->
                    <Frame parentKey="PlayerLevel" inherits="PreviewModuleTemplate">
                        <Size x="0" y="0"/>
                        <Layers>
                            <Layer level="OVERLAY">
                                <FontString parentKey="Text" text="80" inherits="GameFontNormal">
                                    <Anchors>
                                        <Anchor point="TOPRIGHT" relativeKey="$parent" x="-24.5" y="-28"/>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent" x="0" y="0"/>
                        </Anchors>
                    </Frame>

                    <!-- Context Icons -->

                    <!-- Portrait Corner Icon -->
                    <Frame parentKey="PortraitCorner" inherits="PreviewModuleTemplate">
                        <Size x="23" y="23"/>
                        <Layers>
                            <Layer level="ARTWORK">
                                <Texture parentKey="Texture" atlas="UI-HUD-UnitFrame-Player-PortraitOn-CornerEmbellishment"/>
                            </Layer>
                        </Layers>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent" x="58.5" y="-53.5"/>
                        </Anchors>
                    </Frame>

                    <!-- AttackIcon -->
                    <Frame parentKey="AttackIcon" inherits="PreviewModuleTemplate">
                        <Size x="16" y="16"/>
                        <Layers>
                            <Layer level="ARTWORK">
                                <Texture parentKey="Texture" atlas="ui-hud-unitframe-player-combaticon"/>
                            </Layer>
                        </Layers>
                        <Anchors>
                            <Anchor point="TOPLEFT" x="64" y="-62"/>
                        </Anchors>
                    </Frame>

                    <!-- GroupIndicator -->
                    <Frame parentKey="GroupIndicator" inherits="PreviewModuleTemplate">
                        <Size x="74" y="16"/>
                        <Layers>
                            <Layer level="BACKGROUND">
                                <Texture parentKey="Left" file="Interface\AddOns\BetterUnitFrame\Media\Group-Indicator"/>
                            </Layer>
                        </Layers>
                        <Anchors>
                            <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="TOPLEFT" x="210" y="-29"/>
                        </Anchors>
                        <Frames>
                            <!-- GroupText -->
                            <Frame parentKey="GroupText" inherits="PreviewModuleTemplate">
                                <Size x="0" y="0"/>
                                <Layers>
                                    <Layer level="OVERLAY">
                                        <FontString text="Group 1" inherits="TextStatusBarText">
                                            <Anchors>
                                                <Anchor point="CENTER" relativeKey="$parent"/>
                                            </Anchors>
                                        </FontString>
                                    </Layer>
                                </Layers>
                                <Anchors>
                                    <Anchor point="TOPLEFT" relativeKey="$parent"/>
                                </Anchors>
                            </Frame>
                        </Frames>
                    </Frame>

                    <!-- Guide Icon -->
                    <Frame parentKey="GuideIcon" inherits="PreviewModuleTemplate">
                        <Size x="16" y="16"/>
                        <Layers>
                            <Layer level="ARTWORK">
                                <Texture parentKey="Texture" atlas="ui-hud-unitframe-player-group-guideicon"/>
                            </Layer>
                        </Layers>
                        <Anchors>
                            <Anchor point="TOPLEFT" x="86" y="-10"/>
                        </Anchors>
                    </Frame>

                    <!-- Leader Icon -->
                    <Frame parentKey="LeaderIcon" inherits="PreviewModuleTemplate">
                        <Size x="16" y="16"/>
                        <Layers>
                            <Layer level="ARTWORK">
                                <Texture parentKey="Texture" atlas="ui-hud-unitframe-player-group-leadericon"/>
                            </Layer>
                        </Layers>
                        <Anchors>
                            <Anchor point="TOPLEFT" x="86" y="-10"/>
                        </Anchors>
                    </Frame>

                    <!-- PvP Icon -->
                    <Frame parentKey="PvPIcon" inherits="PreviewModuleTemplate">
                        <Size x="44" y="44"/>
                        <Layers>
                            <Layer level="ARTWORK">
                                <Texture parentKey="Texture" atlas="UI-HUD-UnitFrame-Player-PVP-HordeIcon"/>
                            </Layer>
                        </Layers>
                        <Anchors>
                            <Anchor point="TOP" relativeKey="$parent" relativePoint="TOPLEFT" x="25" y="-50"/>
                        </Anchors>
                    </Frame>

                    <!-- Play Time Icon -->
                    <Frame parentKey="PlayTimeIcon" inherits="PreviewModuleTemplate">
                        <Size x="29" y="29"/>
                        <Layers>
                            <Layer level="ARTWORK">
                                <Texture parentKey="Texture" atlas="UI-HUD-UnitFrame-Player-PlayTimeTired"/>
                            </Layer>
                        </Layers>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPRIGHT" x="-21" y="-24"/>
                        </Anchors>
                    </Frame>

                    <!-- Rest Loop Icon -->
                    <Frame parentKey="RestLoop" inherits="PreviewModuleTemplate">
                        <Size x="20" y="20"/>
                        <Layers>
                            <Layer level="BACKGROUND">
                                <Texture parentKey="Left" file="Interface\AddOns\BetterUnitFrame\Media\Rest-Icon"/>
                            </Layer>
                        </Layers>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent" x="64" y="-6"/>
                        </Anchors>
                    </Frame>

                    <!-- Ready Check -->
                    <Frame parentKey="ReadyCheck" inherits="PreviewModuleTemplate">
                        <Size x="40" y="40"/>
                        <Layers>
                            <Layer level="BACKGROUND">
                                <Texture parentKey="Left" file="Interface\raidframe\readycheck-waiting"/>
                            </Layer>
                        </Layers>
                        <Anchors>
                            <Anchor point="CENTER" relativeKey="$parent.PlayerPortrait"/>
                        </Anchors>
                    </Frame>

                    <!-- Role Icon -->
                    <Frame parentKey="RoleIcon" inherits="PreviewModuleTemplate">
                        <Size x="12" y="12"/>
                        <Layers>
                            <Layer level="BACKGROUND">
                                <Texture parentKey="Left" atlas="roleicon-tiny-dps"/>
                            </Layer>
                        </Layers>
                        <Anchors>
                            <Anchor point="TOPRIGHT" relativeKey="$parent" x="-24.5" y="-28"/>
                        </Anchors>
                    </Frame>
                </Frames>
            </Frame>
        </Frames>
    </Frame>
</Ui>